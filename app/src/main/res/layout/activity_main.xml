<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8dp"
    android:background="#1c1c1e"
    tools:context=".MainActivity">

    <!-- Pantalla donde sale el resultado -->
    <TextView
        android:id="@+id/pantallaResultado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.2" 
        android:layout_marginTop="32dp"
        android:gravity="bottom|end"
        android:padding="16dp"
        android:textSize="56sp"
        android:text="0"
        android:maxLines="1"
        android:ellipsize="end"
        android:textColor="#E0E0E0"
        android:layout_marginBottom="8dp"/>

    <!-- Base para los botones, se expande para ocupar el espacio restante (layout_weight="1") -->
    <GridLayout
        android:layout_width="match_parent"
        android:columnCount="4"
        android:rowCount="5"
        android:useDefaultMargins="true"
        android:layout_height="0dp"
        android:layout_weight="1">

        <!-- BOTONES, en el orden de arriba izquierda a abajo derecha -->

        <!-- Fila 1 -->
        <Button
            android:id="@+id/btnC"
            android:onClick="onClear"
            android:text="C"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:textSize="24sp"
            android:textColor="#E0E0E0"
            android:backgroundTint="#A5A5A5"
            app:rippleColor="#CCC"
            android:layout_columnSpan="2"
            android:layout_gravity="fill_horizontal"/>
        <Button
            android:id="@+id/btnDividir"
            android:onClick="onOperador"
            android:text="/"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:textSize="32sp"
            android:textColor="#E0E0E0"
            app:rippleColor="#FA0"
            android:backgroundTint="#FF9500"/>
        <Button
            android:id="@+id/btnMultiplicar"
            android:onClick="onOperador"
            android:text="*"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:textSize="32sp"
            android:textColor="#E0E0E0"
            app:rippleColor="#FA0"
            android:backgroundTint="#FF9500"/>

        <!-- Fila 2 -->
        <Button
            android:id="@+id/btn7"
            android:onClick="onBotonPulsado"
            android:text="7"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:textSize="24sp"
            android:textColor="#E0E0E0"
            app:rippleColor="#666"
            android:backgroundTint="#505050"/>
        <Button
            android:id="@+id/btn8"
            android:onClick="onBotonPulsado"
            android:text="8"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:textSize="24sp"
            android:textColor="#E0E0E0"
            app:rippleColor="#666"
            android:backgroundTint="#505050"/>
        <Button
            android:id="@+id/btn9"
            android:onClick="onBotonPulsado"
            android:text="9"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:textSize="24sp"
            android:textColor="#E0E0E0"
            app:rippleColor="#666"
            android:backgroundTint="#505050"/>
        <Button android:id="@+id/btnRestar"
            android:onClick="onOperador"
            android:text="-"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:textSize="32sp"
            android:textColor="#E0E0E0"
            app:rippleColor="#FA0"
            android:backgroundTint="#FF9500"/>

        <!-- Fila 3 -->
        <Button
            android:id="@+id/btn4"
            android:onClick="onBotonPulsado"
            android:text="4"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:textSize="24sp"
            android:textColor="#E0E0E0"
            app:rippleColor="#666"
            android:backgroundTint="#505050"/>
        <Button
            android:id="@+id/btn5"
            android:onClick="onBotonPulsado"
            android:text="5"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:textSize="24sp"
            android:textColor="#E0E0E0"
            app:rippleColor="#666"
            android:backgroundTint="#505050"/>
        <Button
            android:id="@+id/btn6"
            android:onClick="onBotonPulsado"
            android:text="6"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:textSize="24sp"
            android:textColor="#E0E0E0"
            app:rippleColor="#666"
            android:backgroundTint="#505050"/>
        <Button
            android:id="@+id/btnSumar"
            android:onClick="onOperador"
            android:text="+"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:textSize="32sp"
            android:textColor="#E0E0E0"
            app:rippleColor="#FA0"
            android:backgroundTint="#FF9500"/>

        <!-- Fila 4 y 5 -->
        <Button
            android:id="@+id/btn1"
            android:onClick="onBotonPulsado"
            android:text="1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:textSize="24sp"
            android:textColor="#E0E0E0"
            app:rippleColor="#666"
            android:backgroundTint="#505050"/>
        <Button
            android:id="@+id/btn2"
            android:onClick="onBotonPulsado"
            android:text="2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:textSize="24sp"
            android:textColor="#E0E0E0"
            app:rippleColor="#666"
            android:backgroundTint="#505050"/>
        <Button
            android:id="@+id/btn3"
            android:onClick="onBotonPulsado"
            android:text="3"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:textSize="24sp"
            android:textColor="#E0E0E0"
            app:rippleColor="#666"
            android:backgroundTint="#505050"/>

        <Button
            android:id="@+id/btnIgual"
            android:onClick="onIgual"
            android:text="="
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="2"
            android:textSize="32sp"
            android:textColor="#E0E0E0"
            android:backgroundTint="#FF9500"
            android:layout_rowSpan="2"
            app:rippleColor="#FA0"
            android:layout_gravity="fill_vertical"/>

        <Button
            android:id="@+id/btn0"
            android:onClick="onBotonPulsado"
            android:text="0"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:textSize="24sp"
            android:textColor="#E0E0E0"
            app:rippleColor="#666"
            android:backgroundTint="#505050"
            android:layout_columnSpan="2"
            android:layout_gravity="fill_horizontal"/>
        <Button
            android:id="@+id/btnDecimal"
            android:onClick="onDecimal"
            android:text="."
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:textSize="24sp"
            android:textColor="#E0E0E0"
            app:rippleColor="#666"
            android:backgroundTint="#505050"/>

    </GridLayout>

</LinearLayout>